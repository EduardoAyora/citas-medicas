// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Persona {
  id        Int    @id @default(autoincrement())
  nombre    String
  apellido  String
  cedula    String @unique
  direccion String
  celular   String
  email     String @unique

  usuario  Usuario?
  paciente Paciente?
  citas    Cita[]
  facturas Factura[]
}

model Paciente {
  sexo      SEXO
  personaId Int  @unique

  persona Persona @relation(fields: [personaId], references: [id])
}

model Usuario {
  id        Int    @id @default(autoincrement())
  username  String @unique
  password  String
  name      String
  role      Rol    @default(DOCTOR)
  personaId Int    @unique

  servicios Servicio[]
  persona   Persona    @relation(fields: [personaId], references: [id])
}

model Servicio {
  id                Int          @id @default(autoincrement())
  costo             Decimal
  descripcion       String
  duracionEnMinutos Int
  dias              HorarioDia[]
  citas             Cita[]
  usuarioId         Int

  usuario Usuario @relation(fields: [usuarioId], references: [id])
}

model Cita {
  id                Int     @id @default(autoincrement())
  time              String
  durationInMinutes Int
  day               String
  esCancelada       Boolean @default(false)
  servicioId        Int
  pacienteId        String

  paciente Persona  @relation(fields: [pacienteId], references: [cedula])
  servicio Servicio @relation(fields: [servicioId], references: [id])
}

model HorarioDia {
  id         Int      @id @default(autoincrement())
  horaInicio Int?
  horaFin    Int?
  dia        Dia
  servicioId Int
  servicio   Servicio @relation(fields: [servicioId], references: [id])

  @@unique([servicioId, dia])
}

model Factura {
  id                  Int      @id @default(autoincrement())
  fecha               DateTime
  descripcionServicio String
  precioServicio      Decimal
  total               Decimal
  cliente             Persona  @relation(fields: [clienteId], references: [id])
  clienteId           Int
}

enum Dia {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
  SABADO
  DOMINGO
}

enum Rol {
  DOCTOR
  SECRETARY
  ADMIN
}

enum SEXO {
  MASCULINO
  FEMENINO
}
