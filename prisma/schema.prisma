// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  username String @unique
  name     String
  role     Rol    @default(DOCTOR)
}

model Cita {
  id                Int    @id @default(autoincrement())
  time              String
  durationInMinutes Int
  day               String
}

model Servicio {
  id                Int          @id @default(autoincrement())
  costo             Decimal
  descripcion       String
  duracionEnMinutos Int
  dias              HorarioDia[]
}

model HorarioDia {
  id         Int      @id @default(autoincrement())
  horaInicio Int
  horaFin    Int
  dia        Dia
  servicioId Int
  servicio   Servicio @relation(fields: [servicioId], references: [id])

  @@unique([servicioId, dia])
}

enum Dia {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
  SABADO
  DOMINGO
}

enum Rol {
  DOCTOR
  SECRETARY
  ADMIN
}
